generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conteudo {
  id      String  @id @default(cuid())
  chave   String  @unique
  valor   String
  pai   String?
  createdAt  DateTime @default(now())
  ordem      Int      @default(0)

  @@index([pai, createdAt])
  @@index([pai, ordem])
}
